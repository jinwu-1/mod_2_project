<h1> <%= @user.name %>'s Profile </h1>

<ul>
    <li>Age: <%= @user.age %> </li>
    <li>Bio: <%= @user.bio %> </li>
</ul>

Reviews:
<ul>
    <% @user.reviews.each do |i| %>
        <li><%= link_to i.hike.name, review_path(i) %></li>
    <% end %>
</ul>


<hr>

<ul>
<% if flash[:errors] %>
    <h3> List of Error(s) </h3>
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>
</ul>

<h3> Create a Review </h3>
<%= form_for @review do |f| %>

    <%= f.hidden_field :user_id %><br>
    <%= f.label :hike_id %><br>
    <%= f.collection_select :hike_id, @hikes, :id, :name %><br><br>
    <%= f.label :rating %><br>
    <%= f.number_field :rating %><br><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, cols: 75, rows: 10 %><br><br>

    <%= f.submit %>

<% end %>