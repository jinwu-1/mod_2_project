<div></div>

<h2> Create an Account! </h2>

<ul>
<% if flash[:errors] %>
    <h3> List of Error(s) </h3>
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>
</ul>

<%= form_for @user do |f| %>

    <%= f.label :username %><br>
    <%= f.text_field :username %><br><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :age %><br>
    <%= f.number_field :age %><br><br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio, cols: 75, rows: 10 %><br><br>

    <%= f.submit %>

<% end %>

<br><%= button_to 'Back', '/', method: :get %>