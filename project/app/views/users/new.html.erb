<style>

    h1 { 
        font-family: 'Open Sans', sans-serif;
         text-align: center;
         font-size: 40px;
         margin-top: 65px;
    }

    div {
        font-family: 'Open Sans', sans-serif;
         text-align: center;
         font-size: 25px;
    }

</style>

<h1> Create an Account! </h1>

<div>
<ul>
<% if flash[:errors] %>
    <h3> List of Error(s) </h3>
    <% flash[:errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>
</ul>

<%= form_for @user do |f| %>

    <%= f.label :username %>:<br>
    <%= f.text_field :username %><br><br>
    <%= f.label :password %>:<br>
    <%= f.password_field :password %><br><br>
    <%= f.label :name %>:<br>
    <%= f.text_field :name %><br><br>
    <%= f.label :age %>:<br>
    <%= f.number_field :age %><br><br>
    <%= f.label :bio %>:<br>
    <%= f.text_area :bio, cols: 45, rows: 5 %><br><br>

    <%= f.submit %>

<% end %>

<br><%= button_to 'Back', '/', method: :get %>
</div>